<%- include("partials/header") -%>

    <h1>Home</h1>
    <%posts.forEach(function(post){ %>
        <h3>
            <%= post.title%>
        </h3>
        <% if(post.body.length>= 100) { %>
            <%= post.body.slice(0,100) + "..." ; %>
                <a href="/posts/<%=post.title%>">Read more</a>
                <% }else { %>
                    <p>
                        <%= post.body; %>
                    </p>
                    <%}; %>
                        <% }); %>
                            <%- include("partials/footer") -%>